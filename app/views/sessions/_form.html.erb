<%= form_tag session_path, class: 'form-horizontal' do %>
  <fieldset>
    <legend>Please provide your information or signin using a social network</legend>
    
    <div class="control-group">
      <%= label_tag :username, 'Username', class: 'control-label' %>
      <div class="controls">
        <%= text_field_tag :username, '', placeholder: 'Your Username' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= label_tag :password, 'Password', class: 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password, '', placeholder: 'Your Password' %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= submit_tag 'Signin', class: 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>